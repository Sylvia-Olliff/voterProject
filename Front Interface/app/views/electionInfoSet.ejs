<% for(var i = 0; i < data.data.length; i++) { %>
  <div class="row header-padding position-padding"> <!-- position begins -->
    <div class="col-md-6">
      <div class="row"> 
        <div class="col-md-6 text-right text-info">
          <strong><%- data.data[i].position %>:</strong>
        </div>
        <div class="col-md-6 text-left text-warning">
          <strong><%- data.data[i].name %></strong>
        </div>
      </div> 
    </div>
    <div class="col-md-6">
      <a href="#" id="<%- i %>" class="btn btn-primary btn-sm" role="button">vote</a>
    </div>
  </div> <!-- position ends -->
<% } %>